extends layout

block content

    div(class='container-fluid', ng-controller='phoneListController')
            
          h1=title          
          
          p Фильтр: 
            input(type="text", ng-model="filter")

          table(border='0', cellspacing='0', cellpadding='0', width='100%', class='table table-striped')
              tr(bgcolor='#AFC7BF')
                th ФИО
                th Должность
                th № тел.
                th № трубки
                th № Мобильного
                th E-mail
              tr(ng-repeat="person in persons | orderBy:'fioname' | filter : filter")
                td(ng-click="openPerson(person.id)") {{person.fioname}}
                td(ng-click="openPerson(person.id)") {{person.jobname}}
                td(ng-click="openPerson(person.id)") {{person.workphone}}
                td(ng-click="openPerson(person.id)") {{person.dect}}
                td(ng-click="openPerson(person.id)") {{person.mobile}}
                td 
                    a(href='mailto:{{person.email}}') {{person.email}}
                
                button(type='button',class='btn btn-primary',data-toggle='modal',data-target='#exampleModal') Launch demo modal
                div(class="modal fade", id="exampleModal", tabindex="-1", role="dialog", aria-labelledby="exampleModalLabel", aria-hidden="true")
                  div(class="modal-dialog", role="document")
                    div(class="modal-content")
                      div(class="modal-header")
                        h5(class="modal-title",id="exampleModalLabel") Modal title
                        button(type="button", class="close", data-dismiss="modal", aria-label="Close")
                          <span aria-hidden="true">&times;</span>
                      div(class="modal-body") MODAL BODY HERE
                      div(class="modal-footer")
                        button(type="button", class="btn btn-secondary", data-dismiss="modal") Close
                        button(type="button", class="btn btn-primary") Save changes