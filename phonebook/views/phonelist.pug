extends layout

block content
    
    div(class='container-fluid', ng-controller='phoneListController')            
        h1=title            
        p Фильтр: 
            input(type="text", ng-model="filter")    
        table(border='0', cellspacing='0', cellpadding='0', width='100%', class='table table-striped')
            tr(bgcolor='#AFC7BF')
                th ФИО
                th Должность
                th № тел.
                th № трубки
                th № Мобильного
                th E-mail
            tr(ng-repeat="person in persons | orderBy:'fioname' | filter : filter")
                td(ng-click="openPerson(person.id)") {{person.fioname}}
                td(ng-click="openPerson(person.id)") {{person.jobname}}
                td(ng-click="openPerson(person.id)") {{person.workphone}}
                td(ng-click="openPerson(person.id)") {{person.dect}}
                td(ng-click="openPerson(person.id)") {{person.mobile}}
                td
                    a(href='mailto:{{person.email}}') {{person.email}}                
        div(class="modal fade", id="personModal", tabindex="-1", role="dialog", aria-labelledby="modalLabel", aria-hidden="true")
            div(class="modal-dialog", role="document")
                div(class="modal-content")
                    div(class="modal-header")
                        h5(class="modal-title",id="modalLabel") {{curentPerson.fioname}}
                        button(type="button", class="close", data-dismiss="modal", aria-label="Close")
                        <span aria-hidden="true">&times;</span>
                    div(class="modal-body") 
                        div.row
                            div.col
                                img(width='200px' class='.img-fluid' src='http://192.168.100.1/portal/phone/photo/{{curentPerson.photopath}}')
                            div.col 
                                table.table.table-striped
                                    tr
                                        td {{curentPerson.jobname}}
                                    tr
                                        td {{curentPerson.workphone}}
                                    tr
                                        td {{curentPerson.dect}}
                                    tr
                                        td {{curentPerson.mobile}}
                                    tr
                                        td
                                            a(href='mailto:{{curentPerson.email}}') {{curentPerson.email}}
                    div(class="modal-footer")